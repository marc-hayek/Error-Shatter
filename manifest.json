{
   "content_scripts": [ {
      "all_frames": true,
      "js": [
         "jquery-2.1.3.min.js", 
         "content.js" 
      ],
      "css": [
        "main.css"
      ],
      "matches": [ "http://*/*", "https://*/*", "file://*/*" ],
      "run_at": "document_start"
   } ],
   "browser_action": {
        "default_icon": "img/cracked_img.png"
   },
   "description": "Notifies you of JavaScript errors by making a crack noise and cracking the screen",
   "icons": {
      "128": "img/logo_128.png",
      "16": "img/logo_16.png",
      "48": "img/logo_48.png"
   },
   "incognito": "spanning",
   "manifest_version": 2,
   "name": "Error Shatter",
   "version":"0.1",
   "permissions": [ "*://*/*", "tabs","webRequest", "notifications", "storage" ],
   "web_accessible_resources": ["img/crack.png","glass.mp3"]
}
